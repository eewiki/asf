<asf xmlversion="1.0">
	<select-by-device id="sam.drivers.wdt.example" caption="WDT Example">
		<module type="application" id="sam.drivers.wdt.example#sam" caption="WDT Example">
			<info type="description" value="summary">
				This example demonstrates how to trigger a watchdog interrupt if the software becomes trapped in a deadlock.
			</info>
			<info type="keyword" value="technology">
				<keyword value="Timers"/>
			</info>
			<build type="c-source" value="wdt_example.c"/>
			<build type="include-path" value="."/>
			<device-support value="sam3"/>
			<device-support value="sam4s"/>
			<device-support value="sam4e"/>
			<device-support value="sam4n"/>
			<device-support value="sam4c"/>
			<device-support value="samg"/>
			<require idref="sam.drivers.wdt"/>
			<require idref="sam.drivers.pio"/>
			<require idref="sam.drivers.pmc"/>
			<require idref="common.utils.stdio.stdio_serial"/>
			<info type="gui-flag" value="move-to-root"/>
		</module>
		<module type="application" id="sam.drivers.wdt.example#sam4l" caption="WDT Example">

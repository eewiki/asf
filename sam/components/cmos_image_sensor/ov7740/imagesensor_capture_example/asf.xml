<asf xmlversion="1.0">
	<module type="application" id="sam.components.cmos_image_sensor.ov7740.imagesensor_capture_example" caption="OV7740 CMOS image sensor example">
		<!-- Summary description -->
		<info type="description" value="summary">
			Simple example capturing a picture from the OV7740 image sensor and displaying it on the board's LCD.
		</info>

		<!-- Keywords -->
		<info type="keyword" value="technology">
			<keyword value="Sensors" />
		</info>

		<!-- Files -->
		<build type="include-path" value="."/>
		<build type="c-source" value="imagesensor_capture_example.c"/>

		<!-- Device support -->
		<device-support value="sam3s"/>
		<device-support value="sam4s"/>

		<!-- Required modules -->
		<require idref="sam.drivers.pio"/>
		<require idref="sam.drivers.smc"/>
		<require idref="common.services.basic.clock"/>
		<require idref="common.services.delay"/>
		<require idref="common.utils.stdio.stdio_serial"/>
		<require idref="sam.components.display.ili9325"/>
		<require idref="sam.components.cmos_image_sensor.ov7740"/>
		<require idref="sam.components.display.aat31xx"/>

		<!-- Specific information -->
    <info type="gui-flag" value="move-to-root"/>
	</module>
</asf>

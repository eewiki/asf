<asf xmlversion="1.0">
	<module type="application" id="xmega.drivers.nvm.example2" caption="NVM Example 2 - EEPROM">
		<info type="description" value="summary">
		Use the XMEGA NVM to get access to EEPROM memory : erase, write, read access and output status on LEDs.
		</info>
		<info type="keyword" value="technology">
			<keyword value="Memory"/>
		</info>
		<build type="c-source" value="example2_xmega.c"/>
		<build type="module-config" subtype="required-header-file" value="conf_example.h"/>
		<device-support value="xmega"/>
		<require idref="common.services.basic.clock"/>
		<require idref="common.services.basic.gpio"/>
		<require idref="xmega.drivers.nvm"/>
		<info type="gui-flag" value="move-to-root"/>
	</module>
	<module type="application" id="xmega.drivers.nvm.example2_gfx" caption="NVM Example 2 - EEPROM with graphics">
		<info type="description" value="summary">
		Use the XMEGA NVM to get access to EEPROM memory : erase, write, read access and output status the display.
		</info>
		<info type="keyword" value="technology">
			<keyword value="Memory"/>
		</info>
		<build type="c-source" value="example2_xmega_gfx.c"/>
		<build type="module-config" subtype="required-header-file" value="conf_example.h"/>
		<device-support value="xmega"/>
		<require idref="common.services.basic.clock"/>
		<require idref="common.services.basic.gpio"/>
		<require idref="common.services.gfx_mono"/>
		<require idref="common.services.gfx_mono.font"/>
		<require idref="xmega.drivers.nvm"/>
		<info type="gui-flag" value="move-to-root"/>
	</module>
</asf>

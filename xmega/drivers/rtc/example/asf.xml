<asf xmlversion="1.0">
	<module type="application" id="xmega.drivers.rtc.example" caption="RTC Example">
		<info type="description" value="summary">
		Use the XMEGA RTC module : initialization, use the LEDs to show the last two digits from time in binary coded decimal (BCD) and then reschedules the alarm in 1 second.
		</info>
		<info type="keyword" value="technology">
			<keyword value="Clocks"/>
			<keyword value="Timers"/>
		</info>
		<build type="c-source" value="rtc_example.c"/>
		<build type="module-config" subtype="required-header-file" value="conf_example.h"/>
		<device-support value="xmegaa"/>
		<device-support value="xmegaau"/>
		<device-support value="xmegac"/>
		<device-support value="xmegad"/>
		<device-support value="xmegae"/>
		<require idref="common.services.basic.gpio"/>
		<require idref="common.boards"/>
		<require idref="xmega.drivers.pmic"/>
		<require idref="xmega.drivers.rtc"/>
		<info type="gui-flag" value="move-to-root"/>
	</module>
</asf>
